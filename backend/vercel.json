{
  "version": 2,
  "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  "builds": [
    {
      "src": "./api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/emails",
      "dest": "./api/controllers/emailController.js",
      "methods": ["GET", "POST"]
    },
    {
      "src": "/api/contents",
      "dest": "./api/controllers/contentController.js",
      "methods": ["GET", "POST", "UPDATE"]
    }
  ]
}
